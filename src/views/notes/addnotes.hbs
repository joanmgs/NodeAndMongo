<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>New note</h3>
    </div>
    <div class="card-body">
      <form action="/">
        <div class="form-group">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              name="title"
              placeholder="Write your title's note"
              autofocus
            />
          </div>
          <div class="form-group">
            <textarea
              name="description"
              class="form-control"
              placeholder="Here! write your description..."
            ></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block" type="submit">
              Save!
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>