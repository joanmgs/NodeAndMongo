<div class="row">
  {{! each iterate the array comming from the route /notes }}
  {{#if myNotes}}
    {{#each myNotes}}
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h4
              class="card-title d-flex justify-content-between align-items-center"
            >
              {{title}}
              {{!-- edit the note --}}
              <a href="/notes/edit/{{_id}}"><i class="fas fa-pen-square"></i></a> 
            </h4>
            <p>
              {{description}}
            </p>
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
              {{!-- this input creates de DELETE petition, it's hidden for the user --}}
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-danger btn-block btn-sm">
                Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <div class="card mx-auto">
      <div class="card-body">
        <p class="lead">You don't have notes yet</p>
        <a href="/notes/add" class="btn btn-success btn-block">Pstt.. you can
          start here
        </a>
      </div>
    </div>
  {{/if}}
</div>